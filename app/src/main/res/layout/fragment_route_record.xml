<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/F7F7F7"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_small_round_background"
        android:paddingBottom="@dimen/dp8"
        android:paddingEnd="@dimen/dp25"
        android:paddingStart="@dimen/dp25"
        android:paddingTop="@dimen/dp8">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="5"
                android:textColor="@color/text_color_333333"
                android:textSize="@dimen/dp20"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/times"
                android:textSize="@dimen/dp14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_mileage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="22.8"
                android:textColor="@color/text_color_333333"
                android:textSize="@dimen/dp20"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/plan_mileage"
                android:textSize="@dimen/dp14" />
        </LinearLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/lv_all_route_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp12"
        android:background="@drawable/shape_small_round_background"
        android:divider="@color/F7F7F7"
        android:dividerHeight="@dimen/dp10" />


</LinearLayout>
