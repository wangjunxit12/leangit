<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/F7F7F7"
    android:orientation="vertical">

    <include
        android:id="@+id/rl_01"
        layout="@layout/item_head_title" />

    <com.meibanlu.driver.view.BounceScrollView
        android:id="@+id/bounceScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_01">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:id="@+id/view_01"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp20" />


            <com.meibanlu.driver.view.NoScrollListView
                android:id="@+id/lv_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:dividerHeight="@dimen/dp1"
                android:visibility="gone" />

            <include layout="@layout/public_shadow" />
        </LinearLayout>
    </com.meibanlu.driver.view.BounceScrollView>

    <TextView
        android:id="@+id/tv_no_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/no_message"
        android:textColor="@color/text_color_999999"
        android:textSize="@dimen/dp19" />
</RelativeLayout>
