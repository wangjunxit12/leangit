<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/F7F7F7"
    android:orientation="vertical">

    <include layout="@layout/item_head_title" />

    <LinearLayout
        android:id="@+id/ll_head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:layout_marginTop="@dimen/dp25"
        android:background="@drawable/selector_click_effect"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/dp8"
        android:paddingStart="@dimen/dp8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="7dp"
            android:text="@string/head"
            android:textColor="@color/text_color_333333"
            android:textSize="@dimen/dp16" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <com.meibanlu.driver.view.CircularImage
                android:id="@+id/ci_user_portrait"
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp10"
                android:layout_toStartOf="@+id/iv_arrow"
                android:src="@mipmap/ic_head" />

            <ImageView
                android:id="@+id/iv_arrow"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp18"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:contentDescription="@string/photo"
                android:src="@mipmap/ic_right_arrow" />
        </RelativeLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp0.5"
        android:layout_marginEnd="@dimen/dp8"
        android:layout_marginStart="@dimen/dp8"
        android:background="@color/F7F7F7" />

    <ListView
        android:id="@+id/lv_personal_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:divider="@color/white" />


</LinearLayout>
