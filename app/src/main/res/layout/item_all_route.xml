<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/ll_01"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp95"
        android:layout_marginEnd="@dimen/dp12"
        android:layout_marginStart="@dimen/dp12"
        android:background="@drawable/shape_task">

        <View
            android:id="@id/view_01"
            android:layout_width="@dimen/dp10"
            android:layout_height="match_parent"
            android:background="@drawable/shape_finish_left" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp12"
            android:layout_toEndOf="@+id/view_01"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_car_number"
                    style="@style/text_style2"
                    android:text="川A9487" />

                <TextView
                    style="@style/text_style1"
                    android:layout_marginStart="@dimen/dp20"
                    android:text="@string/shift_time"
                    android:textSize="@dimen/dp13" />

                <TextView
                    android:id="@+id/tv_shift_time"
                    style="@style/text_style1"
                    android:layout_marginStart="@dimen/dp2"
                    android:text="09:10"
                    android:textSize="@dimen/dp13" />
                <TextView
                    android:id="@+id/tv_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp10"
                    android:text="@string/passenger_number"
                    android:textColor="@color/text_color_999999"
                    android:textSize="@dimen/dp14" />

                <TextView
                    android:id="@+id/tv_seats"
                    style="@style/text_style4"
                    android:textSize="@dimen/dp16"
                    android:text="0"
                    android:layout_marginStart="@dimen/dp5"
                    android:layout_marginEnd="@dimen/dp10"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10">

                <TextView
                    android:id="@+id/tv_start_station"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxEms="6"
                    android:singleLine="true"
                    android:text="五彩池"
                    android:textColor="@color/text_color_333333"
                    android:textSize="@dimen/dp15" />

                <TextView
                    android:id="@+id/tv_depart_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp5"
                    android:textColor="@color/text_color_333333"
                    android:textSize="@dimen/dp15" />

                <View
                    android:layout_width="@dimen/dp15"
                    android:layout_height="@dimen/dp1"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/dp5"
                    android:layout_marginStart="@dimen/dp4"
                    android:background="@color/text_color_333333" />

                <TextView
                    android:id="@+id/tv_end_station"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxEms="5"
                    android:maxLines="1"
                    android:text="熊猫海"
                    android:textColor="@color/text_color_333333"
                    android:textSize="14.5dp" />

                <TextView
                    android:id="@+id/tv_arrive_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp5"
                    android:textColor="@color/text_color_333333"
                    android:textSize="@dimen/dp15" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="班次应跑:"
                    android:textColor="@color/text_color_333333"
                    android:textSize="@dimen/dp13" />

                <TextView
                    android:id="@+id/tv_plan_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp3"
                    android:text="0km"
                    android:textColor="@color/text_color_333333"
                    android:textSize="@dimen/dp13" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp30"
                    android:text="班次实跑:"
                    android:textColor="@color/text_color_333333"
                    android:textSize="@dimen/dp13" />

                <TextView
                    android:id="@+id/tv_reality_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp3"
                    android:text="0km"
                    android:textColor="@color/text_color_333333"
                    android:textSize="@dimen/dp13" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/view_shadow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp5"
        android:layout_below="@+id/ll_01"
        android:layout_marginEnd="@dimen/dp15"
        android:layout_marginStart="@dimen/dp15"
        android:background="@mipmap/ic_shadow" />

</RelativeLayout>
