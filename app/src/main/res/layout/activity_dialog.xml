<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dp50"
        android:layout_marginRight="@dimen/dp50"
        android:background="@drawable/shape_large_round_background">

        <TextView
            android:id="@+id/dialog_title"
            style="@style/text_style2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp15" />

        <com.meibanlu.driver.view.LetterSpacingTextView
            android:id="@+id/dialog_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_title"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_marginTop="7dp"
            android:gravity="center_vertical"
            android:lineSpacingExtra="7dp"
            android:textSize="@dimen/dp16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp0.5"
            android:layout_below="@+id/dialog_content"
            android:layout_marginTop="@dimen/dp16"
            android:background="#dfdfdd" />

        <LinearLayout
            android:id="@+id/ll_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_content"
            android:layout_marginTop="17dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dialog_cancel"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_marginBottom="1dp"
                android:layout_marginStart="1dp"
                android:layout_weight="1"
                android:background="@null"
                android:text="@string/cancel"
                android:textColor="#7e7e7e"
                android:textSize="@dimen/dp14" />

            <View
                android:layout_width="@dimen/dp0.5"
                android:layout_height="match_parent"
                android:background="#dfdfdd" />

            <Button
                android:id="@+id/dialog_sure"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_marginBottom="1dp"
                android:layout_marginEnd="1dp"
                android:layout_weight="1"
                android:background="@null"
                android:text="@string/sure"
                android:textColor="#37a6ff"
                android:textSize="14dp" />

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
