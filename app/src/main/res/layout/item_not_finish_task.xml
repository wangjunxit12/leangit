<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_run_title">

        <RelativeLayout
            android:id="@+id/rl_current"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp6"
            android:background="@color/white"
            android:paddingBottom="@dimen/dp5"
            android:paddingTop="@dimen/dp5">

            <ImageView
                android:id="@+id/iv_roll"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginStart="@dimen/dp10"
                android:src="@mipmap/ic_roll" />

            <TextView
                android:id="@+id/tv_roll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp4"
                android:layout_toEndOf="@+id/iv_roll"
                android:text="@string/rolling"
                android:textColor="@color/textFdd000"
                android:textSize="@dimen/dp12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_roll"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/dp12"
                android:layout_marginStart="@dimen/dp15"
                android:layout_marginTop="@dimen/dp10"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_line_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8:00"
                        android:textColor="@color/text_color_333333"
                        android:textSize="@dimen/dp16" />

                    <TextView
                        android:id="@+id/tv_person"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp15"
                        android:text="@string/passenger_number"
                        android:textColor="@color/text_color_999999"
                        android:textSize="@dimen/dp14" />

                    <TextView
                        android:id="@+id/tv_seats"
                        style="@style/text_style4"
                        android:textSize="@dimen/dp16"
                        android:text="0" />

                    <TextView
                        style="@style/text_style1"
                        android:text="人"
                        android:textSize="@dimen/dp14" />

                    <TextView
                        style="@style/text_style1"
                        android:layout_marginStart="@dimen/dp7"
                        android:text="讲解"
                        android:textSize="@dimen/dp14" />

                    <TextView
                        android:id="@+id/tv_name"
                        style="@style/text_style4"
                        android:textSize="@dimen/dp15"
                        android:text="无" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp8">

                    <TextView
                        android:id="@+id/tv_start_station"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="五彩池"
                        android:textColor="@color/text_color_333333"
                        android:textSize="@dimen/dp16" />

                    <View
                        android:id="@+id/line"
                        android:layout_width="@dimen/dp20"
                        android:layout_height="@dimen/dp1"
                        android:layout_marginEnd="@dimen/dp2"
                        android:layout_marginStart="@dimen/dp2"
                        android:layout_marginTop="@dimen/dp9"
                        android:layout_toEndOf="@+id/tv_start_station"
                        android:background="@color/text_color_333333" />

                    <TextView
                        android:id="@+id/tv_end_station"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/line"
                        android:text="熊猫海"
                        android:textColor="@color/text_color_333333"
                        android:textSize="@dimen/dp16" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/ll_other_station"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp5"
                    android:padding="@dimen/dp5"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/other_station"
                        android:textColor="@color/black"
                        android:visibility="invisible"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_other_station"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp10"
                        android:text="春熙路春熙春熙路春熙春熙路春熙"
                        android:maxLength="15"
                        android:visibility="invisible"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                    <Button
                        android:id="@+id/scan"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="验票"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="end"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:background="@drawable/shape_get_code"
                        />

                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">

                <View
                    android:id="@+id/circle_point"
                    android:layout_width="@dimen/dp7.5"
                    android:layout_height="@dimen/dp7.5"
                    android:layout_marginTop="@dimen/dp5"
                    android:layout_marginEnd="@dimen/dp2"
                    android:layout_toStartOf="@+id/tv_is_finish"
                    android:background="@drawable/shape_circle_red" />

                <TextView
                    android:id="@+id/tv_is_finish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/tv_set_trip"
                    android:text="@string/not_finish"
                    android:textColor="#FD8900"
                    android:textSize="@dimen/dp12" />

                <TextView
                    android:id="@+id/tv_itinerary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/tv_set_trip"
                    android:layout_below="@+id/tv_is_finish"
                    android:layout_marginTop="@dimen/dp5"
                    android:background="@drawable/shape_set_shift"
                    android:padding="@dimen/dp5"
                    android:text="@string/itinerary"
                    android:textColor="@color/text_color_333333"
                    android:textSize="@dimen/dp12" />

                <TextView
                    android:id="@+id/tv_set_trip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_itinerary"
                    android:layout_marginEnd="@dimen/dp15"
                    android:layout_marginTop="@dimen/dp6"
                    android:background="@drawable/shape_set_shift"
                    android:padding="@dimen/dp5"
                    android:text="@string/set_current"
                    android:textColor="@color/text_color_333333"
                    android:textSize="@dimen/dp12" />
                <TextView
                    android:id="@+id/end_sign"
                    android:padding="@dimen/dp5"
                    android:textColor="@color/text_color_333333"
                    android:textSize="12sp"
                    android:layout_marginEnd="@dimen/dp15"
                    android:layout_marginTop="@dimen/dp6"
                    android:layout_below="@+id/tv_set_trip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/end_sign"
                    android:visibility="gone"
                    android:background="@drawable/shape_set_shift"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/item_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/rl_out"
        android:visibility="visible"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp5"
        android:padding="@dimen/dp5"
        >
        <TextView
            android:text="温馨提示："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/holo_red_light"
            />
        <TextView
            android:text="@string/circle_line_tips"
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/holo_red_light"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <View
        android:id="@+id/view_shadow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp5"
        android:layout_below="@+id/rl_out"
        android:layout_marginEnd="@dimen/dp6"
        android:layout_marginStart="@dimen/dp6"
        android:background="@mipmap/ic_shadow" />
</RelativeLayout>
