<resources>

    <!-- Base application theme. -->
    <style name="AppThemeNoTitleBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here.黑色背景无actionBar -->
        <item name="colorPrimaryDark">#FFF36D</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <!--自定义AlertDialog-->
        <item name="alertDialogTheme">@style/Theme.AppCompat.Light.Dialog.Alert.Self</item>
    </style>
    <style name="Theme.AppCompat.Light.Dialog.Alert.Self"
        parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <!--修改AlertDialog按钮的颜色-->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--加载中对话框-->
    <style name="custom_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <style name="rb_style">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MyDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="OnePixelActivity" parent="android:Theme.Holo.Light.NoActionBar">
        <!-- 一像素这只为透明-->
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="text_style1">
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">@dimen/dp14</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="text_style2">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">@dimen/dp16</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="text_style3">
        <item name="android:textColor">#fd8900</item>
        <item name="android:textSize">@dimen/dp12</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="text_style4">
        <item name="android:textColor">#fdd000</item>
        <item name="android:textSize">@dimen/dp12</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="popStyle">
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>
        <item name="android:windowExitAnimation">@anim/pophidden_anim</item>
    </style>

    <style name="base_text1">
        <item name="android:textColor">@color/text_color_333333</item>
        <item name="android:textSize">@dimen/dp14</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="common_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <!--&lt;!&ndash;背景模糊&ndash;&gt;-->
        <!--<item name="android:backgroundDimAmount">0.5</item>-->
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
        <item name="android:windowFrame">@android:color/transparent</item>
    </style>


</resources>

