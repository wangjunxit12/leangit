<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="2dp" />
            <gradient
                android:angle="270"
                android:centerColor="#F1F5F8"
                android:endColor="#F1F5F8"
                android:startColor="#F1F5F8" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="2dp" />
                <gradient
                    android:endColor="#FEDD28"
                    android:startColor="#FDD001" />
            </shape>
        </clip>
    </item>

</layer-list>